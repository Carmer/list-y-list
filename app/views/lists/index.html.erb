<div class="container">
  <h1 class="center-align">List-y-List</h1>
  <%= button_to "Create New List", new_list_path, method: "get", class: "btn btn-large center" %>
  <div>
    <ol class="list_list hoverable">
      <% @lists.each do |list| %>
        <li><%= link_to list.title, list_path(list) %> - <%= list.description %></li>
      <% end %>
    </ol>
  </div>
</div>
