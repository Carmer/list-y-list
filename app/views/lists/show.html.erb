<div class="container">

  <h1 class="center-align"><%= @list.title %></h1>
  <div class="list_buttons">
    <%= button_to "Edit", edit_list_path(@list), method: 'get', class: "btn " %>
    <%= button_to "Delete", list_path(@list), method: 'delete', class: "btn  red" %>
    <%= button_to "Create New Task", new_task_path, method: "get", class: "btn yellow" %>
  </div>
  <h3>List Description: <%= @list.description %></h3>
  <table>
    <tbody>
      <tr>
        <td>Title</td>
        <td>Notes</td>
        <td>Start Date</td>
        <td>Due Date</td>
        <td>Status</td>
      </tr>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.notes %></td>
        <td><%= task.start_date %></td>
        <td><%= task.due_date %></td>
        <td><%= task.completion_status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
